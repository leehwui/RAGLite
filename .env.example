# Environment Configuration for RAGLite
# Copy this file to .env and update values for your environment

# Elasticsearch Configuration
ELASTICSEARCH_HOST=http://localhost:1200
ELASTICSEARCH_PASSWORD=infini_rag_flow
ELASTIC_USERNAME=elastic

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
EMBEDDING_HOST=http://localhost:11434  # Separate server for embeddings (optional)

# Model Configuration
EMBEDDING_MODEL=qwen3-embedding:4b
LLM_MODEL=qwen3:32b
LLM_NUM_PREDICT=512
INCLUDE_THINKING=false

# Reranking Configuration
RERANKER_TYPE=cross_encoder
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_TOP_K=3

# Hugging Face mirror (use when behind restricted networks, e.g., China)
# Set to a custom endpoint like https://hf-mirror.com or your internal mirror.
HF_ENDPOINT=https://hf-mirror.com

# Redis Configuration (for task storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Leave empty if no password required

# Web Service Configuration
PORT=8000

# Comma-separated list of allowed origins for CORS (frontend dev, staging, production)
# Example: ALLOWED_ORIGINS=http://localhost:3000,https://app.example.com
ALLOWED_ORIGINS=http://localhost:3000